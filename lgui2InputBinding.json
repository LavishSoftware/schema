{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://www.lavishsoft.com/schema/lgui2InputBinding.json",
    "description": "JSON Schema for a LavishGUI2 Input Binding",
    "definitions": {
        "lgui2": {
            "inputBinding": {
                "$ref": "#"
            },
            "eventHandler": {
                "$ref": "http://www.lavishsoft.com/schema/lgui2EventHandler.json"
            },
            "inputControl": {
                "oneOf": [
                    {
                        "type": "string"
                    },
                    {
                        "type": "object",
                        "properties": {
                            "controlName": {
                                "type": "string"
                            },
                            "controlVKeyName": {
                                "type": "string"
                            },
                            "controlID": {
                                "type": "integer"
                            },
                            "controlType": {
                                "type": "string",
                                "enum": [
                                    "button",
                                    "mousebutton",
                                    "dpad",
                                    "axis",
                                    "mousewheel",
                                    "cursor"
                                ]
                            },
                            "deviceName": {
                                "type": "string"
                            },
                            "deviceProductID": {
                                "oneOf": [
                                    {
                                        "type": "string"
                                    },
                                    {
                                        "type": "integer"
                                    }
                                ]
                            },
                            "deviceManufacturerID": {
                                "oneOf": [
                                    {
                                        "type": "string"
                                    },
                                    {
                                        "type": "integer"
                                    }
                                ]
                            },
                            "deviceType": {
                                "type": "string",
                                "enum": [
                                    "keyboard",
                                    "mouse",
                                    "other"
                                ]
                            },
                            "minValue": {
                                "type": "number"
                            },
                            "maxValue": {
                                "type": "number"
                            },
                            "value": {
                                "type": "number"
                            },
                            "valuesRelative": {
                                "type": "boolean"
                            },
                            "maxValuesExclusive": {
                                "type": "boolean",
                                "default": false
                            }
                        },
                        "oneOf": [
                            {
                                "not": {
                                    "properties": {
                                        "controlType": {
                                            "type": "string"
                                        }
                                    }
                                }
                            },
                            {
                                "properties": {
                                    "controlType": {
                                        "const": "button"
                                    },
                                    "minValue": {
                                        "type": "number",
                                        "minValue": 0.0,
                                        "maxValue": 1.0,
                                        "multipleOf": 1
                                    },
                                    "maxValue": {
                                        "type": "number",
                                        "minValue": 0.0,
                                        "maxValue": 1.0,
                                        "multipleOf": 1
                                    }
                                }
                            },
                            {
                                "properties": {
                                    "controlType": {
                                        "const": "mousebutton"
                                    },
                                    "minValue": {
                                        "type": "number",
                                        "minValue": 0.0,
                                        "maxValue": 1.0,
                                        "multipleOf": 1.0
                                    },
                                    "maxValue": {
                                        "type": "number",
                                        "minValue": 0.0,
                                        "maxValue": 1.0,
                                        "multipleOf": 1.0
                                    }
                                }
                            },
                            {
                                "properties": {
                                    "controlType": {
                                        "const": "dpad"
                                    }
                                }
                            },
                            {
                                "properties": {
                                    "controlType": {
                                        "const": "axis"
                                    }
                                }
                            },
                            {
                                "properties": {
                                    "controlType": {
                                        "const": "mousewheel"
                                    },
                                    "minValue": {
                                        "type": "number",
                                        "multipleOf": 120.0
                                    },
                                    "maxValue": {
                                        "type": "number",
                                        "multipleOf": 120.0
                                    }
                                }
                            },
                            {
                                "properties": {
                                    "controlType": {
                                        "const": "cursor"
                                    },
                                    "minX": {
                                        "type": "number"
                                    },
                                    "minY": {
                                        "type": "number"
                                    },
                                    "maxX": {
                                        "type": "number"
                                    },
                                    "maxY": {
                                        "type": "number"
                                    }
                                }
                            }
                        ]
                    }
                ]
            }
        }
    },
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "controls": {
            "oneOf": [
                {
                    "type": "string"
                },
                {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/lgui2/inputControl"
                    }
                }
            ]
        },
        "eventHandler": {
            "$ref": "#/definitions/lgui2/eventHandler"
        },
        "modifiers": {
            "oneOf": [
                {
                    "type": "string"
                },
                {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "enum": [
                            "alt",
                            "ctrl",
                            "shift",
                            "win",
                            "lalt",
                            "lctrl",
                            "lshift",
                            "lwin",
                            "ralt",
                            "rctrl",
                            "rshift",
                            "rwin"
                        ]
                    }
                },
                {
                    "type": "object",
                    "properties": {
                        "alt": {
                            "type": "boolean"
                        },
                        "ctrl": {
                            "type": "boolean"
                        },
                        "shift": {
                            "type": "boolean"
                        },
                        "win": {
                            "type": "boolean"
                        },
                        "lAlt": {
                            "type": "boolean"
                        },
                        "lCtrl": {
                            "type": "boolean"
                        },
                        "lShift": {
                            "type": "boolean"
                        },
                        "lWin": {
                            "type": "boolean"
                        },
                        "rAlt": {
                            "type": "boolean"
                        },
                        "rCtrl": {
                            "type": "boolean"
                        },
                        "rShift": {
                            "type": "boolean"
                        },
                        "rWin": {
                            "type": "boolean"
                        }
                    },
                    "additionalProperties": false
                }
            ]
        }
    },
    "required": [
        "name",
        "controls",
        "eventHandler"
    ]
}
