{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://www.lavishsoft.com/schema/lmacTask.json",
  "description": "An LMAC Task",
  "type": "object",
  "definitions": {
    "numberOrInteger": {
      "anyOf": [
        {
          "type": "integer"
        },
        {
          "type": "number"
        }
      ]
    }
  },
  "properties": {
    "library": {
      "type": "string"
    },
    "taskName": {
      "type": "string"
    },
    "type": {
      "type": "string"
    },
    "duration": {
      "$ref": "#/definitions/numberOrInteger"
    },
    "instant": {
      "type": "boolean"
    }
},
"oneOf": [
    {
      "required": [
        "library",
        "taskName"
      ]
    },
    {
      "required": [
        "type"
      ]
    }
  ]
}