{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://www.lavishsoft.com/schema/lmacTask.json",
  "description": "JSON Schema for an LMAC Task",
  "type": "object",
  "oneOf": [
    {
      "properties": {
        "library": {
          "type": "string"
        },
        "taskName": {
          "type": "string"
        }
      },
      "required": [
        "library",
        "taskName"
      ]
    },
    {
      "properties": {
        "type": {
          "type": "string"
        }
      },
      "required": [
        "type"
      ]
    }
  ]
}
