                    },
                    "display_name": {
                        "type": "string",
                        "description": "A human-readable name or title to display"
                    }
                }
            },
            "inputBinding": {
                "$ref": "http://www.lavishsoft.com/schema/lgui2InputBinding.json"
            },
            "hotkey": {
                "$ref": "http://www.lavishsoft.com/schema/isboxer2/hotkey.json"
            }
        }
    },
    "allOf": [
        {
            "$ref": "#/definitions/isboxer2/identifier"
        }
