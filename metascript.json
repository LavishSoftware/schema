{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://www.lavishsoft.com/schema/metascript.json",
    "type": "object",
    "title": "MetaScript",
    "description": "A MetaScript combines code and metadata",
    "definitions": {
        "code": {
            "$ref": "http://www.lavishsoft.com/schema/lgui2LS1Code.json"
        },
        "include": {
            "type": "string"
        },
        "variable": {
            "type": "object",
            "properties": {
                "scope": {
                    "type": "string",
                    "enum": [
                        "global",
                        "script",
                        "object",
                        "local"
                    ]
                },
                "type": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "value": {}
            },
            "required": [
                "type",
                "name"
            ]
        },
        "objectdef": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "inherits": {
                    "type": "string"
                },
                "variables": {
                    "type": "array",
                    "items": {
                        "allOf": [
                            {
                                "$ref": "#/definitions/variable"
                            }
                        ]
                    }
                },
                "functions": {
                    "type": "array",
                    "items": {
                        "allOf": [
                            {
                                "$ref": "#/definitions/function"
                            }
                        ]
                    }
                }
            },
            "required": [
                "name"
            ]
        },
        "function": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "function",
                        "atom",
                        "member",
                        "method"
                    ]
                },
                "returnType": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "parameters": {
                    "type": "array",
                    "items": {
                        "allOf": [
                            {
                                "$ref": "#/definitions/parameter"
                            }
                        ]
                    }
                },
                "code": {
                    "allOf": [
                        {
                            "$ref": "#/definitions/code"
                        }
                    ]
                }
            }
        },
        "parameter": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "value": {}
            },
            "required": [
                "type",
                "name"
            ]
        }
    },
    "properties": {
        "name": {
            "type": "string"
        },
        "includes": {
            "type": "array",
            "items": {
                "allOf": [
                    {
                        "$ref": "#/definitions/include"
                    }
                ]
            }
        },
        "optionalIncludes": {
            "type": "array",
            "items": {
                "allOf": [
                    {
                        "$ref": "#/definitions/include"
                    }
                ]
            }
        },
        "variables": {
            "type": "array",
            "items": {
                "allOf": [
                    {
                        "$ref": "#/definitions/variable"
                    }
                ]
            }
        },
        "objectdefs": {
            "type": "array",
            "items": {
                "allOf": [
                    {
                        "$ref": "#/definitions/objectdef"
                    }
                ]
            }
        },
        "functions": {
            "type": "array",
            "items": {
                "allOf": [
                    {
                        "$ref": "#/definitions/function"
                    }
                ]
            }
        }
    },
    "required": [
        "name"
    ]
}