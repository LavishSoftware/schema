{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://www.lavishsoft.com/schema/lgui2Color.json",
    "description": "JSON Schema for a LavishGUI2 Color",
    "definitions":{
        "numberOrInteger": {
            "anyOf": [
                {
                    "type": "integer"
                },
                {
                    "type": "number"
                }
            ]
        }
    },
    "oneOf":[
        {
            "type":"string"
        },
        {
            "type":"object",
            "properties":{
                "alpha":{
                    "$ref":"#/definitions/numberOrInteger"
                },
                "red":{
                    "$ref":"#/definitions/numberOrInteger"
                },
                "blue":{
                    "$ref":"#/definitions/numberOrInteger"
                },
                "green":{
                    "$ref":"#/definitions/numberOrInteger"
                }
            }
        },
        {
            "type":"array",
            "minItems":1,
            "maxItems":4
        }
    ]
}
